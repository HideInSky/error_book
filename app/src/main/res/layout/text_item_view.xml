<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/rounded_rec"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/round_rect_shape"
            app:layout_constraintBottom_toBottomOf="@+id/txt_item_view"
            app:layout_constraintEnd_toStartOf="@+id/txt_item_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/squared_rec"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:background="#838383"
            app:layout_constraintBottom_toBottomOf="@+id/txt_item_view"
            app:layout_constraintEnd_toStartOf="@+id/txt_item_view"
            app:layout_constraintStart_toStartOf="@+id/rounded_rec"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:padding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="16dp"
            android:text="数学"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>